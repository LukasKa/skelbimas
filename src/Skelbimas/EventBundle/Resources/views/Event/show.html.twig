{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Event</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Marke</th>
                <td>{{ entity.marke }}</td>
            </tr>
            <tr>
                <th>Modelis</th>
                <td>{{ entity.modelis }}</td>
            </tr>
            <tr>
                <th>Komentaras</th>
                <td>{{ entity.komentaras }}</td>
